             }\n                                        margin=\"normal\"\n                                    />\n                                    <Button\n                                        variant=\"outlined\"\n                                        startIcon={\n                                            aiGenerating ? (\n                                                <CircularProgress\n                                                    size={20}\n                                                />\n                                            ) : (\n                                                <AutoAwesomeIcon />\n                                            )\n                                        }\n                                        onClick={handleGenerateAI}\n                                        disabled={\n                                            aiGenerating ||\n                                            !aiPrompt.trim() ||\n                                            !apiKey.trim()\n                                        }\n                                        fullWidth\n                                        sx={{ mt: 1 }}\n                                    >\n                                        {aiGenerating\n                                            ? 'AI 표지 생성 중...'\n                                            : 'AI 표지 생성'}\n                                    </Button>\n                                </Box>\n                            )}\n\n                            {previewImage && (\n                                <Card\n                                    sx={{\n                                        mt: 3,\n                                        maxWidth: 400,\n                                        mx: 'auto',\n                                        p: 1,\n                                    }}\n                                >\n                                    <CardMedia\n                     